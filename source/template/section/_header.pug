header.header
	.container
		.header__top
			.header__logo
				img.header__img(src="app/img/logo.png" alt="logo")
			.header__nav
				nav.menu
					ul.menu__list
						each val in ['Каталог обогревателей', 'Доставка и оплата','Сотрудничество' ]
							li.menu__item
								a.menu__link(href="#")= val
			.header__basket
				a.basket-block
					i.fa.fa-shopping-cart
					span.basket-block__text Корзина
					span.basket-block__count [5]
			.header__phone
				.phone
					a.phone__link(href="tel:+78002220102") 8 800 222 01 02
				.header__call.call
					a.call__link(href="#")
						i.fa.fa-phone
						| Заказать звонок